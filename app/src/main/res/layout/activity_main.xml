<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom|end"
        android:padding="16dp">

        <TextView
            android:id="@+id/operationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#888888"
            android:textSize="24sp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/displayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="56sp"
            android:maxLines="1"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="24sp"
            android:autoSizeMaxTextSize="56sp" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#A5A5A5"
            android:onClick="onClearClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="±"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#A5A5A5"
            android:onClick="onPlusMinusClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="%"
            android:textSize="24sp"
            android:textColor="#000000"
            android:backgroundTint="#A5A5A5"
            android:onClick="onPercentClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="÷"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500"
            android:onClick="onOperationClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="×"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500"
            android:onClick="onOperationClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="−"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500"
            android:onClick="onOperationClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500"
            android:onClick="onOperationClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="⌫"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onBackspaceClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#333333"
            android:onClick="onDigitClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF9500"
            android:onClick="onEqualsClick" />

    </GridLayout>

</LinearLayout>